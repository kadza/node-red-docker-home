{
    "name": "home-automation",
    "description": "A Node-RED Project",
    "version": "3.0.2",
    "private": true,
    "node-red": {
        "settings": {
            "flowFile": "flows.json",
            "credentialsFile": "flows_cred.json"
        }
    },
    "main": "node_modules/node-red/red/red.js",
