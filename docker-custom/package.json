    "dependencies": {
        "@kadza/node-red-contrib-komfovent": "~0.3.3",
        "node-red-contrib-blindcontroller": "~4.8.6",
        "node-red-contrib-homekit-bridged": "~1.4.3",
        "node-red-contrib-influxdb": "~0.6.1",
        "node-red-contrib-sunpos": "~1.4.1",
        "node-red-node-email": "~1.12.3",
        "node-red-node-openweathermap": "~0.5.0",
        "node-red": "3.0.2"
    },
    "engines": {
        "node": ">=12"
    }
}
